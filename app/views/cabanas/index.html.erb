<h1>Listing cabanas</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Servicios</th>
    <th>Descripcion</th>
  </tr>

<% @cabanas.each do |cabana| %>
  <tr>
    <td><%=h cabana.nombre %></td>
    <td><%=h cabana.servicios %></td>
    <td><%=h cabana.descripcion %></td>
    <td><%= link_to 'Show', cabana %></td>
    <td><%= link_to 'Edit', edit_cabana_path(cabana) %></td>
    <td><%= link_to 'Destroy', cabana, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New cabana', new_cabana_path %>