<h1>Editing promotion</h1>


  <% form_for(@promotion, :html => { :multipart => true }) do |f| %>
  
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :inicio %><br />
    <%= f.datetime_select :inicio %>
  </p>
  <p>
    <%= f.label :caduca %><br />
    <%= f.datetime_select :caduca %>
  </p>
  <p>
    <%= f.label :estado %><br />
    <%= f.check_box :estado %>
  </p>
  <p>
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion %>
  </p>
  
    <p>
  <%= f.label 'Imagen' %><br />
  <%= f.file_field :photo %>
</p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @promotion %> |
